@using JobHunt.BU.DTO
@using JobHunt.BU.Manage
@model JobHunt.BU.DTO.CandidateDTO
@{
    ViewBag.Title = "Attached profile || " + Model.CddFullName;
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<div class="col-lg-9 column upload-cv-right">
    <div class="padding-left">
        <div class="manage-jobs-sec">
            <h3>CV &amp; Cover Letter</h3>
            <div class="coverletter-sec">
                <form>
                    @if (!string.IsNullOrEmpty(Model.nameFileCV))
                    {
                        <div class="row">
                            <div class="col-lg-3">
                                <p>
                                    Attached files:
                                </p>
                            </div>
                            <div class="col-lg-9">
                                <p id="name-file-uploaded">
                                    @Html.ActionLink(Model.nameFileCV, "DownloadFile", "Common", new { path = Model.CddPathCV, name = Model.nameFileCV }, new { id = "linkpath" })
                                </p>
                            </div>
                        </div>
                    }
                    <div class="row paddingdiv">
                        <div class="col-lg-3">
                            <p>
                                Select Attachment *
                            </p>
                        </div>
                        <div class="col-lg-9">
                            <div class="main-upload">
                                <input type="file" name="name" value="" class="bt_input uploadfilecv" id="fileCV" />
                                <div class="text-upload">
                                    <span class="icon_upload_file"></span>
                                    <b>ATTACHMENTS</b>
                                </div>
                            </div>
                            <div class="textfile">
                                <span class="namefile"></span>
                            </div>
                            <div class="notetext">
                                (File format .doc, .docx, .pdf size <= 2MB)
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <span class="pf-title">Description</span>
                            <div class="pf-field">
                                @Html.TextAreaFor(model => model.CddDescribeCV)
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="button" id="uploadcv">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


