@using JobHunt.BU.Manage
@using JobHunt.BU.DTO
@using Microsoft.AspNet.Identity
@{
    var InfoCandidate = (CandidateDTO)(new CandidateManage().GetCandidateInfoByIdAspNetUser(User.Identity.GetUserId()));
}
<aside class="col-lg-3 column border-right">
    <div class="widget">
        <div class="tree_widget-sec">
            @if (Request.IsAuthenticated)
            {
                if (User.IsInRole("Người tìm việc"))
                {
                    <ul>
                        <li class="inner-child">
                            <a title=""><i class="la la-briefcase"></i>Profile</a>
                            <ul>
                                <li><a href="@Url.Action("CandidateProfile", "Candidate")" title="">Records management</a></li>
                                <li><a href="@Url.Action("CandidateUploadCV", "Candidate")" title="">CV - Attached documents</a></li>
                            </ul>
                        </li>
                        <li class="inner-child">
                            <a href="#" title=""><i class="la la-paper-plane"></i>My job</a>
                            <ul>
                                <li><a href="@Url.Action("SaveJobs", "Candidate")" title="">Saved jobs</a></li>
                                <li><a href="@Url.Action("AppliedJobs", "Candidate")" title="">Job application</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangePassword", "Candidate")" title=""><i class="la la-flash"></i>Change Password</a>
                        </li>
                        @*<li class="inner-child">
                            <a href="#" title=""><i class="la la-user"></i>Tài khoản</a>
                            <ul>
                                <li><a href="@Url.Action("UpdateAccount", "Candidate")" title="">Chỉnh sửa tài khoản</a></li>
                            </ul>
                        </li>*@
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" title="Đăng xuất khỏi hệ thống"><i class="la la-unlink"></i> Logout</a>

                            }

                        </li>
                    </ul>
                }
                else if(User.IsInRole("Người tuyển dụng"))
                {
                    <ul>
                        <li class="inner-child active">
                            <a href="#" title=""><i class="la la-file-text"></i>Company information</a>
                            <ul style="display: block;">
                                <li><a href="@Url.Action("ProfileRecruit","Recruit")" title="Hồ sơ công ty">Company profile</a></li>
                            </ul>
                        </li>
                        <li class="inner-child">
                            <a title="Quản lý công việc"><i class="la la-briefcase"></i>Workflow management</a>
                            <ul>
                                <li>
                                    <a href="@Url.Action("PostJob","Recruit")" title="Đăng tin tuyển dụng">Published Recruitment</a>
                                </li>
                                <li><a href="@Url.Action("ListJobsPost","Recruit")" title="Danh sách công việc">Work list</a></li>
                                <li><a href="@Url.Action("ListCandidatesApplied","Recruit")" title="Danh sách ứng viên">List of candidates</a></li>
                            </ul>
                        </li>
                        
                        <li>
                            <a href="@Url.Action("ChangePassword","Recruit")" title="Đổi mật khẩu"><i class="la la-lock"></i>Change Password</a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" title="Đăng xuất khỏi hệ thống"><i class="la la-unlink"></i> Logout</a>
                            }
                        </li>
                    </ul>
                }
            }
        </div>
    </div>
