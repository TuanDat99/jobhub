
@{
    ViewBag.Title = "Add a new employer || JobHunt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.Hidden("TypeAccount", 1)
<div class="wrap__content" id="detail-customer">
    <section class="content cus-detail main__content">
        <div class="cus-detail__top main__banner">
            <div>
                <div class="">
                    <div class="main__title text-center">
                        <h1 class="main__title--content">Add employers</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-flud">
            <div class="content__inner main-content">
                <div class="cus-detail__viewmini">
                    <div class="cus-detail__viewmini--content">
                        <div class="row">
                            <div class="col-xl-3 col-md-12">
                                <div class="cus-detail__viewmini--avatar edit-avatar">
                                    <a title="Avatar" style="width: 148px; height: 148px; margin: auto;">
                                        <img src="~/Assets/client/images/avatar-default.png" id="avatarlink" style="width: 148px; height: 148px" />
                                        <div class="edit-avatar__btn avatar-fix">
                                            <img src="~/Assets/client/images/camera.png" />
                                            <p>Update</p>
                                        </div>
                                    </a>
                                    <input type="file" name="" value="" class="disabled" id="updateavatar" />
                                    <input type="file" name="" value="" class="disabled" />
                                </div>
                            </div>
                            <div class="col-xl-9 col-md-12 mobile--hidden">
                                <div class="row">
                                    <div class="col-xl-6 col-sm-6">
                                        <table class="table__view">
                                            <tr>
                                                <td class="tb_label bold">Username:</td>
                                                <td class="input-field"><input class="input-base readonly" type="text" name="" value="" id="" /></td>
                                            </tr>
                                            <tr>
                                                <td class="tb_label bold">Company name:</td>
                                                <td class="input-field"><input class="input-base readonly" type="text" name="" value="" id="" /></td>
                                            </tr>
                                            <tr>
                                                <td class="tb_label bold">Register day:</td>
                                                <td class="input-field"><input class="input-base readonly" type="datetime" name="" value="" id="" /></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-xl-6 col-sm-6">
                                        <table class="table__view">
                                            <tr>
                                                <td class="tb_label bold">Phone number:</td>
                                                <td class="input-field"><input class="input-base readonly" type="text" name="" value="" id="" /></td>
                                            </tr>
                                            <tr>
                                                <td class="tb_label bold">Email:</td>
                                                <td class="input-field"><input class="input-base readonly" type="text" name="" value="" id="" /></td>
                                            </tr>
                                            <tr>
                                                <td class="tb_label bold">Address:</td>
                                                <td class="input-field"><input class="input-base readonly" type="text" name="" value="" id="" /></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="clear-fix"></div>
                            </div>
                        </div>
                        <div class="clear-fix"></div>
                    </div>
                </div>

                <div class="cus-detail__view cus-edit">
                    <form id="updaterecruit-form" class="recruit-form">
                        <div class="coverimage cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Company cover photo<span class="red">(*)</span></h3>
                            </div>
                            <div style="height: 350px; background: url(/Assets/client/images/coverimage.jpg) 100% 100% no-repeat scroll transparent;" class="parallax scrolly-invisible no-parallax" id="bg-recruit"></div><!-- PARALLAX BACKGROUND IMAGE -->
                            <div class="container fluid">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="edit-coverimage" id="bg-upcover">
                                            <a title="Company cover photo">
                                                <div class="edit-avatar__btn up-coverimage">
                                                    <img src="~/Assets/client/images/camera.png" class="display-inline-block" />
                                                    <p class="display-inline-block text-update-cover-img">Update</p>
                                                </div>
                                                <input type="file" name="" value="" class="btnupcover" id="updatecover" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Employer information<span class="red">(*)</span></h3>
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Company name:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIFullName", new { htmlAttributes = new { @class = "input-base", placeholder = "Company name:" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Username:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIUserName", new { htmlAttributes = new { @class = "input-base", placeholder = "Username" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Password<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIPassword", new { htmlAttributes = new { @class = "input-base passwordtext textinput", placeholder = "Mật khẩu: nhim1999", @type = "password" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Confirm password<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIPasswordConfirm", new { htmlAttributes = new { @class = "input-base passwordtext textinput", placeholder = "Confirm password: nhim1999", @type = "password" } })
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="tb_label bold">Number of people:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.DropDownList("RI_CompanySizeId", (IEnumerable<SelectListItem>)ViewBag.ListCompanySizes, "--- Company size ---", new { @class = "chosen-city form-control" })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Establishment time:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("FounedYearString", new { htmlAttributes = new { @class = "input-base", @type = "date" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Career:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.DropDownList("RI_ProfessionId", (IEnumerable<SelectListItem>)ViewBag.ListProfesstions, "--- Career ---", new { @class = "chosen-city form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Introduce:<span class="red">(*)</span></td>
                                            <td class="input-field date">
                                                @Html.TextArea("RIAbout", new { @class = "chosen form-control", placeholder = "Introduce" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Status:<span class="red">(*)</span></td>
                                            <td class="input-field date">
                                                @Html.DropDownList("RIStatus",
                                                    new List<SelectListItem>
                                                    {
                                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.StatusCandidate.Active, Text = "Active"},
                                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.StatusCandidate.Block, Text = "Block"},
                                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.StatusCandidate.Approvaling, Text = "Approvaling"},

                                                    }, new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Company's logo:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                <div style="line-height: 50px; display: flex;">
                                                    <div class="logo-company display-inline" style="overflow: hidden">
                                                        <span title="Company's logos" class="spanlogo">
                                                            <img src="/Assets/client/upload/images/1.jpg" alt="Logo công ty" id="logocompany" />
                                                        </span>
                                                    </div>
                                                    <div class="upload display-inline">
                                                        <div class="main-up-logo">
                                                            <a title="Upload logo" class="titlelogo"><i class="la la-upload"></i>Upload</a>
                                                            <input type="file" name="name" value="" id="updatelogo" class="btnuploadlogo" style="left: 10%"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>


                        <div class="cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Contact information</h3>@*<span class="red">(*)</span>*@
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Phone number:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIPhone", new { htmlAttributes = new { @class = "input-base", placeholder = "Phone number" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Email:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIEmail", new { htmlAttributes = new { @class = "input-base", placeholder = "Email" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Website:</td>
                                            <td class="input-field">
                                                @Html.Editor("RIWebsite", new { htmlAttributes = new { @class = "input-base", placeholder = "Website" } })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Province / City:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.DropDownList("RI_CityId", (IEnumerable<SelectListItem>)ViewBag.ListCities, "Select Province / City", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">District:</td>
                                            <td class="input-field">
                                                <select data-placeholder="Select District" id="RI_DistrictId" class="chosen-single form-control" style="color: black">
                                                    <option value="">-- Select District --</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Wards:</td>
                                            <td class="input-field">
                                                <select data-placeholder="Select Wards" class="chosen-single form-control" id="RI_WardId" style="color: black">
                                                    <option value="">-- Select Wards --</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Address:<span class="red">(*)</span></td>
                                            <td class="input-field">
                                                @Html.Editor("RIAddress", new { htmlAttributes = new { @class = "input-base", placeholder = "Address" } })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-btn text-center">
                            <button class="btn btn-primary margin-right-30 updaterecruit" type="submit" id="recruit-1">Add</button>
                            <a href="/Admin/recruitmanagement" class="btn btn-danger danger bt-danger btn--cancel-edit-cm">Cancel</a>
                            @*<a class="btn btn-primary btn-del-cm danger" onclick="document.showDel('cm')" input-id-cm="" page-cm="detail">Xóa</a>*@
                        </div>
                    </form>
                    <div class="popup--del popup--base popup--del-cm disabled">
                        <div class="container-flud">
                            <div class="body-layer layer-cm popup__bg"></div>
                            <div class="pop-up-del pop-up-del-cm popup__content text-center">
                                <div class="popup__content2">
                                    <h3>Notice</h3>
                                    <p>Are you sure ?</p>
                                    <div>
                                        <a title="Đồng ý" yes="yes" class="bt-success success btn-yes-cm">Agree</a>
                                        <a class="btn-primary bt-close btn-close-cm" title="Hủy bỏ" cancel="cancel">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*list history*@
    </section>
</div>


