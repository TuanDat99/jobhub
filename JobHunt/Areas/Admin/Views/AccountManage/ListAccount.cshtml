@model List<JobHunt.BU.DTO.WebmasterInfoDTO>
@{
    /**/
    ViewBag.Title = "List of accounts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var stt = 0;
}

<section class="wrap__content" id="list-customer">
    <div class="listcm main__content" id="list-customer">
        <div class="listcm__top main__banner">
            <div class="row">
                <div class="col-xl-6 col-md-6 col-12">
                    <div class="main__title">
                        <h1 class="main__title--content">Members list</h1>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6 col-12">

                    <div class="banner-interactive">
                        <ul class="interactive__btn group-btn">
                            <li>
                                <a class="customer-add customer-btn__add" href="@Url.Action("createaccount","accountmanage")">
                                    Add
                                </a>
                            </li>
                          
                        </ul>
                    </div>
                </div>
                <div class="clear-fix"></div>
            </div>
        </div>
        <div class="listcm__content main__list">

            <div class="list__content main__list--content gridcm">
                <div class="table__content">
                    <table id="example" class="display textable" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Username</th>
                                <th>Fullname</th>
                                <th>Date of entry</th>
                                <th>Location</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var webmt in Model)
                                {
                                    stt++;
                                    <tr role="row" class="odd textable" id="trwebmt@(webmt.WebmasterInfoId)">
                                        <td class="sorting_1">@stt</td>
                                        <td class="username" id="username@(webmt.WebmasterInfoId)">@webmt.WIUserName</td>
                                        <td>@webmt.WIFullName</td>
                                        <td>@webmt.WIDateStart.Value.ToString("dd-MM-yyyy")</td>
                                        <td>@webmt.nameRole</td>
                                        <td>@webmt.WIAddress</td>
                                        <td>@webmt.WIStatusString</td>
                                        <td class="option text-center">
                                            <a title="Delete" class="btn btn-primary btn-update-webmt btn-del-control" href="@Url.Action("detailaccount","accountmanage", new { id = webmt.WebmasterInfoId })">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <a title="Delete" class="btn danger btn-del-webmt btn-del-control" input-id-webmt="@webmt.WebmasterInfoId" page-webmt="list" data-toggle="modal" data-target="#exampleModalCenter">
                                                <i class="far fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        @* Popup delete *@
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Delete account</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure to delete this <span id="namedelete"></span> account ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="btn-yes-delete-webmt">Agree</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


