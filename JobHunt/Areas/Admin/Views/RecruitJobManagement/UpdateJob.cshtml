@model JobHunt.BU.DTO.RecruitJobDTO
@using JobHunt.BU.Manage
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Edit post|| " + Model.RJTitle;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("RecruitJobId", Model.RecruitJobId)
@Html.Hidden("DistrictIdJobGet", Model.RJDistrictId)
@Html.Hidden("WardIdJobGet", Model.RJ_WardId)
<div class="wrap__content" id="detail-customer">
    <section class="content cus-detail main__content">
        <div class="cus-detail__top main__banner">
            <div>
                <div class="">
                    <div class="main__title text-center">
                        <h1 class="main__title--content">Edit job posting</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-flud">
            <div class="content__inner main-content">
                <div class="cus-detail__view cus-edit">
                    <form id="admin-updatepost-form" class="admin-postjob-form">
                        <div class="cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Post information<span class="red">(*)</span></h3>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Title<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJTitle, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "Recruitment of staff ..." } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Job<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m => m.RJ_ProfessionId, (IEnumerable<SelectListItem>)ViewBag.ListProfesstions, "--- Job ---", new { @class = "chosen-city form-control" })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">  <span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJPosition, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "Nhân viên" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Salary<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m => m.RJ_SalaryId, (IEnumerable<SelectListItem>)ViewBag.ListSalaries, "--- Salary ---", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Experience<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m => m.RJ_ExperienceId, (IEnumerable<SelectListItem>)ViewBag.ListExperiences, "--- Experience ---", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Gender<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m=>m.RJGender,
                                            new List<SelectListItem>
                                            {
                                                new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.Gender.Boy, Text = "Male"},
                                                new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.Gender.Girl, Text = "Female"},
                                                new SelectListItem {Value = ""+(int?)JobHunt.BU.Common.Enum.Gender.NoRequired, Text = "No request" },
                                                new SelectListItem {Value = ""+(int?)JobHunt.BU.Common.Enum.Gender.Boy, Text = "Other" }
                                            }, new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Type<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m=>m.RJType,
                                            new List<SelectListItem>
                                            {
                                                new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.EnumTypeJob.Normal, Text = "Normal"},
                                                new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.EnumTypeJob.Hot, Text = "Hot"},
                                                new SelectListItem {Value = ""+(int?)JobHunt.BU.Common.Enum.EnumTypeJob.Stop, Text = "Stop" }
                                            }, new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Amount<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJAmount, new { htmlAttributes = new { @class = "input-base passwordtext textinput", placeholder = "" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Level<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m => m.RJ_LevelId, (IEnumerable<SelectListItem>)ViewBag.ListLevels, "--- Level ---", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Form of work<span class="red">(*):</span></td>
                                            <td class="input-field date">
                                                @Html.DropDownListFor(m => m.RJ_WorkTypeId, (IEnumerable<SelectListItem>)ViewBag.ListWorkTypes, "--- Form of work ---", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Expired<span class="red">(*):</span></td>
                                            <td class="input-field date">
                                                @Html.EditorFor(m => m.RJExpirationDateString, new { htmlAttributes = new { @class = "input-base passwordtext textinput", @type = "date" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Status<span class="red">(*):</span></td>
                                            <td class="input-field date">
                                                @Html.DropDownListFor(m=>m.RJStatus,
                                    new List<SelectListItem>
                                    {
                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.EnumStatusJob.Approvaling, Text = "Approvaling"},
                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.EnumStatusJob.Active, Text = "Active"},
                                        new SelectListItem { Value = ""+(int?)JobHunt.BU.Common.Enum.EnumStatusJob.Inactive, Text = "Inactive"},

                                    }, new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-lg-12 editordiv">
                                    <span class="pf-title bold">Mô tả<span class="red">(*)</span></span>
                                    <section id="editor">
                                        <div class="summernote" id="RJ_Describe">@Html.Raw(Model.RJ_Describe)</div>
                                    </section>
                                </div>
                                <div class="col-lg-12 editordiv">
                                    <span class="pf-title bold">Job requirements<span class="red">(*)</span></span>
                                    <section id="editor1">
                                        <div class="summernote" id="RJ_Require">@Html.Raw(Model.RJ_Require)</div>
                                    </section>
                                </div>
                                <div class="col-lg-12 editordiv">
                                    <span class="pf-title bold">Benefit<span class="red">(*)</span></span>
                                    <section id="editor2">
                                        <div class="summernote" id="RJBenefit">@Html.Raw(Model.RJBenefit)</div>
                                    </section>
                                </div>
                            </div>
                        </div>

                        <div class="cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Contact information<span class="red">(*)</span></h3>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Phone number<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJPhoneContact, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "Phone number: 0336515294" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Email<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJEmailContact, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "Email: nguyenvana@gmail.com" } })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Contact name<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJNameContact, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "Le Tuan Dat" } })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="cus-detail__content">
                            <div class="cus-detail__content--title">
                                <h3>Work address</h3>@*<span class="red">(*)</span>*@
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-md-12">
                                    <table>
                                        <tr>
                                            <td class="tb_label bold">Province / City<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.DropDownListFor(m => m.RJCityId, (IEnumerable<SelectListItem>)ViewBag.ListCities, "-- Select Province / City --", new { @class = "chosen form-control" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Wards<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                <select data-placeholder="Select Wards" class="chosen-single dropdown-address form-control" id="RJ_WardId" name="RJ_WardId">
                                                    <option value="">-- Select Wards --</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-xl-6 col-md-12">
                                    <table>

                                        <tr>
                                            <td class="tb_label bold">District<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                <select data-placeholder="Select District" id="RJDistrictId" name="RJDistrictId" class="chosen-single dropdown-address form-control">
                                                    <option value="">--Select District --</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="tb_label bold">Address<span class="red">(*):</span></td>
                                            <td class="input-field">
                                                @Html.EditorFor(m => m.RJ_WorkPlace, new { htmlAttributes = new { @class = "input-base textinput", placeholder = "1 Vo Van Ngan" } })
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        @*</div>*@

                        <div class="form-btn text-center">
                            <button class="btn btn-primary margin-right-30 updatejob" type="submit" id="postjob-2">Save</button>
                            <a href="/admin/recruitjobmanagement" class="btn danger bt-danger btn--cancel-edit-cm">Cancel</a>
                            @*<a class="btn btn-primary btn-del-cm danger" onclick="document.showDel('cm')" input-id-cm="" page-cm="detail">Xóa</a>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @*list history*@
    </section>
</div>


